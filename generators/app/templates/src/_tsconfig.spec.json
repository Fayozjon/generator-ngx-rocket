{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es5",
<% if (props.tools.includes('jest')) { -%>
    "allowJs": true,
<% } -%>
    "types": [
<% if (props.tools.includes('jest')) { -%>
      "jest",
<% } else { -%>
      "jasmine",
<% } -%>
      "node"
    ]
  },
  "files": [
<% if (!props.tools.includes('jest')) { -%>
    "test.ts",
<% } -%>
    "polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.mock.ts",
    "**/*.d.ts"
  ]
}
